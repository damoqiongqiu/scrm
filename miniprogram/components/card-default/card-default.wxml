<view class="card-container">
    <view class="left-column">
        <text class="user-name">{{userInfo.name}}</text>
        <text class="user-title">{{userInfo.title}}</text>
        <view class="user-cellphone">
            <text class="cellphone-label">手机：</text>
            <text class="cellphone-number">{{userInfo.cellphone}}</text>
        </view>
        <view class="user-company">
            <text class="company-label">公司：</text>
            <text class="company-name">{{userInfo.companyName}}</text>
        </view>
    </view>
    <view class="right-column">
        <view class="avatar">
            <image src="/assets/images/avatar.jpg"></image>
        </view>
        <!-- <view class="info">
            <text>客户</text>
        </view> -->
    </view>
</view>