.action-container {
    display: flex;
    flex-direction: row;
    background: #fff;
    border: #666 1px solid;
    padding: 10rpx;
    margin-bottom: 20rpx;
    height: 120rpx;
}

.action-container .avatar-view {
    border: #666 1px solid;
    width: 120rpx;
    text-align: center;
}

.action-container .avatar-view image {
    width: 100%;
    height: 100%;
    vertical-align: top;
}

.action-container .text-view {
    border: #666 1px solid;
    flex: 1;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
}

.action-container .text-view .col-1 {
    border: #666 1px solid;
    flex: 1;
    padding: 4rpx 12rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.action-container .text-view .col-2 {
    border: #666 1px solid;
    width: 150rpx;
    padding: 4rpx 0rpx 4rpx 12rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.action-container .text-view .col-1 .user-name {
    font-size: 36rpx;
    font-weight: bold;
}

.action-container .text-view .col-1 .action {
    font-size: 28rpx;
}

.action-container .text-view .col-2 .time {
    font-size: 28rpx;
    text-align: right;
}